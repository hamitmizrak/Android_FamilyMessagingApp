<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="hamitmizrak.com.familymessagingapp" >
    <!-- permission:izin almak -->
    <!-- internet izni -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- camera izni -->
    <uses-permission android:name="android.permission.CAMERA" /> <!-- telefon rehber izni izni -->
    <uses-permission android:name="android.permission.READ_CONTACTS" /> <!-- konum izni -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FamilyMessagingApp"
        tools:targetApi="31" >
        <activity
            android:name=".GoogleAutActivity"
            android:exported="false" />
        <activity
            android:name=".AdminActivty"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>