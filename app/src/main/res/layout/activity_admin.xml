<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/admin_page"
    tools:context=".AdminActivity">

    <!--toolbar eklemek-->
    <include
        android:id="@+id/myToolBarId"
        layout="@layout/my_toolbar" />

    <!--circle Image View-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/circle_profile"
        android:id="@+id/pictureGoogleSignInId"/>

    <!--adınız-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pictureGoogleSignInId"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Adınız"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:id="@+id/nameGoogleLoginId"/>

    <!--email-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameGoogleLoginId"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Email"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:id="@+id/emailGoogleLoginId"/>

    <!--  google sign IN logout-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Google Çıkış"
        android:id="@+id/signOutButtonId"/>
</RelativeLayout>