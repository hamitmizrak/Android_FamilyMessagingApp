<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">

    <!--toolbar eklemek-->
    <include
        android:id="@+id/myToolBarId"
        layout="@layout/my_toolbar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:text="Sadece üyeler Görebilir"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/circle_profile"
        android:id="@+id/pictureGoogleSignInId"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adınız"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/pictureGoogleSignInId"
        android:textSize="15dp"
        android:id="@+id/nameGoogleLoginId" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nameGoogleLoginId"
        android:textSize="14dp"
        android:id="@+id/emailGoogleLoginId"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Google Çıkış"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/signOutButtonId"/>

</RelativeLayout>