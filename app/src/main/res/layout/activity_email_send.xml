<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmailSendActivity">


   <!-- Kime: EditText-->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="22dp"
        android:layout_marginRight="22dp"
        android:id="@+id/editTextWhoEmailId" />

    <!-- Kime: TextView-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/editTextWhoEmailId"
        android:layout_alignBottom="@id/editTextWhoEmailId"
        android:layout_alignParentLeft="true"
        android:text="Kime"
        android:textColor="#000000"/>

    <!-- Konu : EditText -->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextWhoEmailId"
        android:layout_alignLeft="@id/editTextWhoEmailId"
        android:layout_marginTop="22dp"
        android:id="@+id/editTextEmailSubjectId"/>

    <!-- Konu : TextView -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/editTextEmailSubjectId"
        android:layout_alignBottom="@id/editTextEmailSubjectId"
        android:layout_alignParentLeft="true"
        android:text="Konu"
        android:textColor="#000000" />


    <!-- İçerik: EditText-->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextEmailSubjectId"
        android:layout_alignLeft="@+id/editTextEmailSubjectId"
        android:layout_marginTop="30dp"
        android:id="@+id/editTextContentId"/>

    <!-- İçerik: EditText-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextContentId"
        android:layout_alignBaseline="@id/editTextContentId"
        android:layout_alignBottom="@id/editTextEmailSubjectId"
        android:text="İçerik"
        android:textColor="#000000"/>

    <!--Mail Send-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextContentId"
        android:layout_alignLeft="@id/editTextContentId"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:text="Email Gönder"
        android:id="@+id/buttonEmailSend"/>

</RelativeLayout>